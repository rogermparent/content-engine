{
  "name": "content-engine-demo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3001",
    "dev:test": "CONTENT_DIRECTORY=test-content next dev --port 3001",
    "build": "next build --webpack",
    "start": "next start --port 3001",
    "start:test": "CONTENT_DIRECTORY=test-content next start --port 3001",
    "lint": "next lint",
    "e2e-dev": "start-server-and-test dev:test http://localhost:3001 \"cypress open --e2e\"",
    "e2e-dev:headless": "start-server-and-test dev:test http://localhost:3001 \"cypress run --e2e\"",
    "e2e-start": "start-server-and-test start:test http://localhost:3001 \"cypress open --e2e\"",
    "e2e-start:headless": "start-server-and-test start:test http://localhost:3001 \"cypress run --e2e\"",
    "generate-fixtures": "start-server-and-test dev:test http://localhost:3001 \"cypress run --config specPattern='cypress/fixtures/**/*.cy.{js,jsx,ts,tsx}'\""
  },
  "dependencies": {
    "content-engine": "^1.0.0",
    "fs-extra": "^11.3.3",
    "lmdb": "^3.4.4",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "cypress": "^15.8.1",
    "simple-git": "^3.30.0",
    "start-server-and-test": "^2.1.3",
    "typescript": "^5.9.3"
  }
}
