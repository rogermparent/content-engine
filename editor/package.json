{
  "name": "recipe-editor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:test": "CONTENT_DIRECTORY=test-content next dev",
    "start:test": "CONTENT_DIRECTORY=test-content next start",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "create-user": "node ./scripts/create-user.mjs",
